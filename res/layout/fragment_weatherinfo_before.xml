<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- there is weather info of date -->

    <include
        android:id="@+id/date_layout"
        layout="@layout/layout_weather_date" />

    <!-- there is now weather info -->

    <include layout="@layout/layout_now_weather_info" />

    <!-- there is little info layout -->

    <include layout="@layout/layout_little_info" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#ffffff" />

    <include layout="@layout/layout_hourly_forecast" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#ffffff" />

</LinearLayout>