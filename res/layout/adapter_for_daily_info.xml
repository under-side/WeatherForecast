<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/daily_low_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="25°" />

        <TextView
            android:id="@+id/daily_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:gravity="center"
            android:text="今天" />

        <TextView
            android:id="@+id/daily_top_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/daily_low_temperature"
            android:textSize="15sp"
            android:gravity="center"
            android:text="35°" />
        
       

        <ImageView
            android:id="@+id/daily_image"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/weather" />
        
         <TextView 
            android:id="@+id/daily_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/daily_image"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="晴天"/>

    </RelativeLayout>
